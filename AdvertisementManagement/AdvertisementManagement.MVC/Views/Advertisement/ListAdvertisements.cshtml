@model IEnumerable<AdvertisementManagement.MVC.Models.AdvertisementViewModel>

@{
    ViewData["Title"] = "ListAdvertisements";
}

<h1>ListAdvertisements</h1>
<div class="searchBox">
    <form method="get" action="SearchByTitle">
        <table>
            <tr>
                <td><input type="text" id="fname_id" name="title" /></td>
            </tr>
            <tr>
                <td><input type="submit" /></td>
            </tr>
        </table>
    </form>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src ="@item.Image">
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
